<%# -*- coding:utf-8-unix -*- -%>

<%- if @images -%>
<%- if @cols.to_i > 0 -%>

<table>
<%- @images.in_groups_of(@cols).each do |images| -%>
<tr>
<%- images.each do |image| -%>
  <td><%= thumbnail_link_with_stars(image) if image %></td>
<%- end -%>
</tr>
<%- end -%>
</table>

<%- else -%>

<ul class="logical">
<%- @images.each do |image| -%>
  <li><%= thumbnail_link_with_stars(image) if image %></li>
<%- end -%>
</ul>

<%- end -%>
<%- end -%>

